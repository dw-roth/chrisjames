---
import { getComponentDataNoId } from '../scripts/utils.js';

const data = await getComponentDataNoId('contact-form');

const gradientStart = data.gradientStart;
const gradientEnd = data.gradientEnd;
const btnBkgndColor = data.btnBkgndColor;
const btnBkgndColorHover = data.btnBkgndColorHover;
const btnTextColor = data.btnTextColor;
const btnActiveBorderColor = data.btnActiveBorderColor;
const color = data.color;
---
<script src="../scripts/contact-form.js"></script>
  <section id="contact"> 
    <div class="section-container">
      <h2> {data.heading}</h2> 
      <p class="subheading"> {data.subheading} </p>

        <div> 
            <form id="contact-form"  action="#" method="post"> 
                <div class="form-group"> 
                  <label for="name"> Name</label> 
                    <input type="text" id="name" name="name" minLength="2" maxLength="50" required> 
                </div>

                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" required>
                </div>

                <div class="form-group">
                    <label for="phone">Phone Number</label>
                    <input type="tel" id="phone" name="phone" pattern="\(?[0-9]{3}\)?[\-. ]?[0-9]{3}[\-, ]?[0-9]{4}" title="Enter a valid, ten-digit U.S. phone number (e.g., 1234567890, 123-456-7890, (123) 456-7890)" placeholder="(123) 456-7890" required>
                </div>

                <div class="form-group">
                    <label for="message">Message</label>
                    <textarea id="message" name="message" minLength="10" maxlength="500" rows="7" placeholder="Type your message..." required></textarea>
                </div>
                <button type="submit" id="submit" class="button-submit">Submit</button>
            </form>         
            <div id="result"></div>
        </div>

        <div class="contact-info-column">
          
            <div class="contact-info contact-email">
                <div class="contact-grid">
                    <div class="env-icon-container">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-envelope" viewBox="0 0 16 16">
                          <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1zm13 2.383-4.708 2.825L15 11.105zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741M1 11.105l4.708-2.897L1 5.383z"/>
                        </svg>
                    </div>
                    <div>
                        <h4 class="contact-label">Email</h4>
                        <a href={`mailto:${data.email}?subject=Email%20from%20your%20website`} class="text-style-link">{data.email}</a>
                    </div>
                </div>
            </div>
            
            <div class="contact-info contact-phone">
                <div class="contact-grid">
                    <!-- Column 1: Phone Icon -->
                    <div class="env-icon-container">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-telephone" viewBox="0 0 16 16">
                          <path d="M3.654 1.328a.678.678 0 0 0-1.015-.063L1.605 2.3c-.483.484-.661 1.169-.45 1.77a17.6 17.6 0 0 0 4.168 6.608 17.6 17.6 0 0 0 6.608 4.168c.601.211 1.286.033 1.77-.45l1.034-1.034a.678.678 0 0 0-.063-1.015l-2.307-1.794a.68.68 0 0 0-.58-.122l-2.19.547a1.75 1.75 0 0 1-1.657-.459L5.482 8.062a1.75 1.75 0 0 1-.46-1.657l.548-2.19a.68.68 0 0 0-.122-.58zM1.884.511a1.745 1.745 0 0 1 2.612.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.68.68 0 0 0 .178.643l2.457 2.457a.68.68 0 0 0 .644.178l2.189-.547a1.75 1.75 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.6 18.6 0 0 1-7.01-4.42 18.6 18.6 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877z"/>
                        </svg>
                    </div>
                    <div>
                        <h4 class="contact-label">Phone</h4>
                        <a href={`tel:${data.phone}`} class="text-style-link">{data.displayPhone}</a>
                    </div>
                </div>
            </div>
            
        </div> <!-- contact-info-column -->
    </div> <!-- section-container -->
  </section>

<style define:vars={{ gradientStart, gradientEnd, btnBkgndColor, btnTextColor, btnBkgndColorHover, btnActiveBorderColor, color }}>
  section {
    background: linear-gradient(45deg, var(--gradientStart), var(--gradientEnd));
    color: var(--color);
    max-width: none;
    padding: 3rem 5% 7rem 5%;
  }
  .section-container {
    max-width: 70ch;
    margin: 0 auto;
  }
  .section-container > h2 {
    font-size: 3rem;
    padding-bottom: 2rem;
    font-weight: 700;
    line-height: 1.2;
    text-align: center;
  }
  .subheading {
    font-size: 1.25rem;
  }
  .grid-container {
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: auto;
    grid-column-gap: 5rem;
    justify-content: stretch;
    align-items: start;
  }
  .form-group label {
      display: block;
      margin-top: 1.5rem;
      margin-bottom: .5rem;
      
  }
  .form-group input:not([type="checkbox"]), 
  .form-group textarea {
      border: 1px solid black;
      min-height: 2.75rem;
      height: auto;
      width: 100%;
      padding: .5rem .75rem;
      font-size: 1rem;
      line-height: 1.6;
  }
  .button-submit {
    display: block;
    border: none;
    background-color: var(--btnBkgndColor);
    color: var(--btnTextColor);
    font-size: 1rem;
    font-weight: bold;
    border-radius: 5px;
    margin: 2rem 0;
    padding: 1rem 1.75rem;
    cursor: pointer;
    background-clip: border-box;
  }
  .button-submit:hover {
    background-color: var(--btnBkgndColorHover);
  }
  .button-submit:focus {
    outline: 2px solid var(--btnActiveBorderColor);
  }
  .contact-info-column {
      display: grid;
      grid-template-columns: 1fr 1fr;
      grid-template-rows: auto;
      grid-column-gap: 3rem;
      justify-content: stretch; 
      margin-top: 2rem;
  }
  .contact-label {
      font-size: 1.5rem;
      margin-top: .8rem;
      margin-bottom: 0;
  }
  .contact-info {
      margin-bottom: 2em;
      justify-self: center;
  }
  .contact-grid {
      display: grid;
      grid-template-columns: 50px 250px;
      grid-template-rows: auto;
      align-items: start;
  }
  .env-icon-container {
      margin-top: .8rem;
  }
  .text-style-link {
      color: white;
  }
  #result {
    margin-top: 20px;
    padding: 10px;
    border-radius: 4px;
  }

@media screen and (max-width: 795px) {
  .grid-container {
      align-items: center;
  }
  .contact-info-column {
      grid-template-columns: 1fr;
      margin-top: 0;
  }
  .contact-info {
      margin-bottom: 1rem;
  }
}
</style>
