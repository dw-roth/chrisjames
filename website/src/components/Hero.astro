---
import { getComponentDataNoId } from '../scripts/utils.js';

const data = await getComponentDataNoId('hero');
const backgroundColor = data.backgroundColor;
const color = data.color;
const left_image = data.background_image_left;
const right_image = data.background_image_right;
---

<section class="hero">
    <div class="hero-left-col">
        <div class="hero-text-container">
          <h1>{data.slogan}</h1> 
        </div>
    </div>
    <div class="hero-right-col">
        <div class="hero-text-container">
          <h1>{data.slogan}</h1> 
        </div>
    </div>
</section>

<style define:vars={{ backgroundColor, color, left_image, right_image }}>
  .hero {
      display: grid;
      grid-template-columns: 40% 60%;
      grid-template-rows: auto;
      grid-column-gap: 0;
      justify-content: stretch;
      width: 100%;
      height: 600px;
      position: relative;
      overflow: auto;
  }
  .hero-left-col {
    background-image: var(--left_image);
      background-position: 30%;
      background-size: cover;
  }
  .hero-left-col .hero-text-container {
      display: none;
  }
  .hero-right-col {
    background-image: var(--right_image);
      background-position: 50%;
      background-size: cover;
      background-repeat: no-repeat;
      position: relative;
  }
  .hero-text-container {
      position: absolute;
      bottom: 0;
      background-color: rgba(0, 0, 0, 0.6);
      width: 100%;
      padding: 1rem 3rem;
  }
  .hero-text-container h1 {
      color: white;
      font-size: 2.5rem;
      text-align: center;
  }

@media screen and (max-width: 1200px) {
  .hero-text-container h1 {
      color: white;
      font-size: 2.25rem;
  }
}

@media screen and (max-width: 1084px) {
  .hero-text-container h1 {
      font-size: 2rem;
  }
}

/* 768px through 991px is bootstraps 'medium' size */
@media screen and (max-width: 991px) {
  .hero {
      height: 450px;
  }
  .hero-text-container {
      padding: 1rem 1.5rem;
  }
  .hero-text-container h1 {
      font-size: 1.7rem;
  }
}


/* bootstrap 'small' screen goes up to 768px. Because of the language
 * in the hero section, we go to small screen mode a little sooner, at 795px.
 * Changes in the wording may required an updated breakpoint */
@media screen and (max-width: 795px) {
  .hero {
      grid-template-columns: 100%;
      height: 350px;
  }
  .hero-left-col {
      background-image: var(--right_image);
  }
  .hero-left-col .hero-text-container {
      display: block;
  }

  .hero-right-col .hero-text-container {
      display: none;
  }
  .hero-right-col {
      display:none;
  }
  .hero-text-container h1 {
      font-size: 1.8rem;
  }
}
</style>
