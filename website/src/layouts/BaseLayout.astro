---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

import '../styles/reset.css';
import '../styles/global.css';

import { getComponentDataNoId } from '../scripts/utils.js';
const data = await getComponentDataNoId('baselayout');
const gtagId = data.gtagId;
---
<html class="no-js" lang="en">
	<head>

  <!-- Google tag (gtag.js) -->
  <script async src=`https://www.googletagmanager.com/gtag/js?id=${data.gtagId}`></script>
  <script define:vars={{ gtagId }}>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', gtagId);
  </script>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{data.title}</title>
    <style is:global>
      @import '../styles/reset.css';
      @import '../styles/global.css';
    </style>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
  <link rel="manifest" href="/site.webmanifest">

  <link href={data.fonts} rel="stylesheet">
  <meta name="description" content={data.metaDescriptionContent}>
  <meta property="og:title" content={data.ogTitleContent}>
  <meta property="og:type" content={data.ogTypeContent}>
  <meta property="og:url" content="{data.ogUrlContent}>
  <meta property="og:image" content="">

  <meta name="theme-color" content="#fafafa">
	</head>
	<body>
    <Header />
    <slot />
    <Footer />
	</body>
</html>
